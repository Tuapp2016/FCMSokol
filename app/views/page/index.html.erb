<div id="contact">
  <hr class="divider">
  <br/>
  <div class="row">

    <form controller="page" action="contactUS" class="form-signin" method="post" >
      <h1>Contact us</h1>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <label for="emailField" class="sr-only">Email</label>
      <div class="input-group margin-bottom-sm">
        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
        <input type="email" id="emailField", name="email" class="form-control" placeholder="Enter your email" required="true" >
      </div>
      <label for="nameField" class="sr-only">Name</label>
      <div class="input-group margin-bottom-sm">
        <span class="input-group-addon"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
        <input type="text" id="nameField" name="name" class="form-control" placeholder="Enter your name" required="true">

      </div>
      <label for="commentField" class="sr-only">Comment</label>
      <div class="input-group margin-bottom-sm">
        <span class="input-group-addon"><i class="fa fa-commenting-o fa-fw"></i></span>
        <textarea class="form-control" name="comment" rows="6" id="commentField" required="true" placeholder="Enter your comments"></textarea>
      </div>
      <button type="submit" class="btn btn-lg btn-primary btn-block"><%= t('.send_comments')%></button>
    </form>
    <br/>
    <br/>

  </div>
</div>
