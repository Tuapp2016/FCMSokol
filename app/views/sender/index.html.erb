<div class="page-header">
  <div class="pull-right">
    <%= link_to 'Add', new_sender_path, :class=>"btn btn-success" %>
    <%= link_to "Send message topic", sender_sender_index_path, :class=>"btn btn-primary" %>

  </div>
  <h2>Tokens</h2>
</div>
<% unless @tokens.empty? %>
  <div id="tokens">
    <%= render 'tokens' %>
  </div>
  <div id="paginate">
    <%= render 'paginate' %>
  </div>
  <div class="row">
    <div class="col-xs-4 col-lg-2">
      <%=button_to "Send page", {:controller=>"sender",:action=>"senderByPage", :page=>@page},{:class=> 'btn btn-default'} %>
    </div>
    <div class="col-xs-4 col-lg-2">
      <%=button_to "Send All",  {:controller=>"sender",:action=>"senderAll",:page=>@page}, {:class=> 'btn btn-primary'} %>
    </div>
  </div>


<% end %>
