<div class="page-header">
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= render 'devise/shared/links' %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if devise_error_messages! != "" %>
    <div class="alert alert-danger alert-dismissible fade in" id="alert-app" role="alert">
      <button type="button" class="close" aria-label="Close" data-dismiss="alert">
        <span>&times;</span>
      </button>
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, :for=>"emailField" %><br />
    <%= f.email_field :email, autofocus: true,:class=>"form-control",:id=>"emailField" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, :for=>"passwordField" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off",:class=>"form-control",:id=>"passwordField" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :name ,:for=>"nameField" %>
    <%= f.text_field :name, :class=>"form-control",:id=>"nameField"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation,:for=>"passwordConfirmationField" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>"form-control", :id=>"passwordConfirmationField" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, :for=>"currentPasswordField" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off",:class=>"form-control",:id=>"currentPasswordField" %>
  </div>

  <%= f.submit "Update",:class=>"btn btn-success btn-lg" %>
<% end %>
<br />

<h3>Cancel my account</h3>

<%= button_to "Cancel my account",  registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class=>"btn btn-danger" %>
<%= link_to "Back", :back, :class=>"btn btn-default" %>
