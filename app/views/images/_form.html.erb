  </div>
  <div class="form-group">
    <%= f.label :image, :for=>"imageField" %>
    <%= f.file_field :image,  :id=>"imageField" %>
  </div>

  <%= f.submit 'Submit',:class=>"btn btn-success" %>
<% end %>
